<!-- This is a partial -->
<header>
    <span id="heading"><i class="fa-solid fa-code"></i> Codeial</span>

    <ul>
        <div id="user-profile-div">
            <% if(locals.user) { %>
                
                <img src=<%= user.avatar %> alt=<%= user.name %> width="50">

                <li>
                    <a href="/users/profile"><%= locals.user.name %></a></li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
            <% } else { %>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
            <% } %>
        </div>
    </ul>
</header>
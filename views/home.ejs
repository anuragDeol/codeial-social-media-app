<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user){ %>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name='content' cols='30' rows='3' placeholder='Type here...'  required></textarea>
                <input type='submit' value="Post">
            </form>
        <% } %>
        <div id="posts-list-container">
            <ul class="font-family-sans-serif">
                <% for(post of posts) { %>
                    <%- include('_post') -%>
                <% } %>

            </ul>
        </div>
    </section>

    <section id="user-friends">
        <h4 class="font-family-sans-serif">Friends</h4>
        
        <% for(u of all_users){ %>
            <p>
                <a href="/users/profile/<%= u.id %>">
                    <%= u.name %>
                    <%if(locals.user && locals.user.id == u.id) { %> 
                        <small> (Me) </small>
                    <% } %>
                </a>
                
            </p>
        <% } %>
    </section>

    <%- include('_chat_box') -%>
</div>
<script src='/js/home_comments.js'></script>
<script src='/js/home_posts.js'></script>
<script src='/js/toggle_likes.js'></script>


<script>
    $('.toggle-like-button').each(function(){
        let self = this;    // 'this' is the href of <a> tag with class 'toggle-like-button'
        let toggleLike = new ToggleLike(self);  // create new instance/object of class 'ToggleLike'
    });
</script>

